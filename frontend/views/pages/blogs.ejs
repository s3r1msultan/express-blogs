<!DOCTYPE html>
<html lang="en">
  <%- include('./../blocks/head.ejs') %>
  <body>
    <%- include('./../blocks/header.ejs', {isLoggedIn: isLoggedIn, isAdmin: isAdmin}) %>
    <div class="container my-5">
      <h2 class="mb-3 text-bold"><%= title %></h2>
      <% if (blogs.length > 0) { %>
      <div class="row">
        <% blogs.forEach(function(blog, index){ %>
        <div class="col-md-3 d-flex align-items-stretch">
          <div class="card mb-4 w-100">
            <% if(blog.url_imgs && blog.url_imgs.length > 0) { %>
            <div
              id="carouselExampleIndicators<%= index %>"
              class="carousel slide"
              data-bs-ride="carousel"
            >
              <div class="carousel-inner">
                <% blog.url_imgs.forEach(function(img, imgIndex){ %>
                <div class="carousel-item <%= imgIndex === 0 ? 'active' : '' %>">
                  <img
                    src="<%= img %>"
                    class="d-block"
                    style="height: 400px; object-fit: cover; width: 100%"
                    alt="Image"
                  />
                </div>
                <% }); %>
              </div>
              <% if(blog.url_imgs.length > 1) { %>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleIndicators<%= index %>"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleIndicators<%= index %>"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
              <% } %>
            </div>
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
              <a
                href="/blogs/<%= blog._id %>"
                class="btn btn-primary mt-auto"
                >Read More</a
              >
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <p>No blogs found.</p>
      <% } %>
    </div>
    <%- include('./../blocks/footer.ejs') %>
  </body>
</html>
